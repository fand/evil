      <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
      <script src="/static/js/phone.js"></script>
    <% else : %>
      <script src="/js/evil.js"></script>
      <% if @test : %>
        <script src="/js/test/test_lib.js"></script>
        <script src="/js/test/test_control.js"></script>
        <script src="/js/test/test_initial.js"></script>
        <script src="/js/test/test_synth.js"></script>
